{
  "name": "socket-benchmark-10k",
  "version": "1.0.0",
  "description": "Socket.IO benchmark test for 10k concurrent connections",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "client": "node dist/client.js",
    "benchmark": "node dist/benchmark.js",
    "monitor": "node dist/monitor.js",
    "test:1k": "node dist/benchmark.js run --connections 1000",
    "test:5k": "node dist/benchmark.js run --connections 5000",
    "test:10k": "node dist/benchmark.js run --connections 10000",
    "test:quick": "node dist/benchmark.js quick",
    "test:custom": "node dist/benchmark.js run --connections 27000 --interval 20 --duration 30 --rate 50 --host d5.drkumo.com",
    "clean": "rm -rf dist"
  },
  "keywords": ["socket.io", "benchmark", "performance", "websocket", "concurrent"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1"
  }
}